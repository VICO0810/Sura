<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="./output.css" rel="stylesheet" />
    <title>Usarios - Index</title>
  </head>
  <body>
    <%- include('../components/header', { title: 'Listado de usuarios' }) %>
    <!-- Contendor Pricipal -->
    <div class="flex flex-col p-2 items-center justify-center gap-10 py-5">
      <!-- Listado de los usuarios -->
      <div class="flex flex-col px-10 w-10/12">
        <a href="/usuarios/create">
          <button
            class="bg-sky-500 text-white font-bold py-2 px-4 rounded-lg p-2"
          >
            Agregar Usuarios
          </button>
        </a>
        <div class="flex bg-white divide-y divide-gray-200">
          <div class="w-1/3 text-center">Check</div>
          <div class="w-1/3 text-center">Nombre Completo</div>
          <div class="w-1/3 text-center flex">Correo</div>
          <div class="w-1/3 text-center">Documento</div>
          <div class="w-1/3 text-center">Celular</div>
          <div class="w-1/3 text-center">Cargo</div>
          <div class="w-1/3 text-center">Contrase침a</div>
          <div class="w-1/3 text-center">Descripci칩n</div>
          <div class="w-1/3 text-center">Fecha de Creaci칩n</div>
          <div class="w-1/3 text-center">Fecha de Actualizaci칩n</div>
        </div>
        <div class="flex flex-col bg-white divide-y divide-gray-200">
          <% if (usuarios.length > 0) { %> <% usuarios.map(usuario => { %>
          <div class="flex p-2">
            <div class="w-1/3 text-center">
              <a href="usuarios/edit/<%= usuario.id %>">
                <button
                  type="submit"
                  class="bg-yellow-500 text-black font-bold py-2 px-4 rounded-lg"
                >
                  Editar
                </button>
              </a>
              <a href="">
                <button
                  type="submit"
                  class="bg-yellow-500 text-black font-bold py-2 px-4 rounded-lg"
                >
                  Eliminar
                </button>
              </a>
            </div>
            <div class="w-1/3 text-center"><%= usuario.fullname %></div>
            <div class="w-1/3 text-center"><%= usuario.email %></div>
            <div class="w-1/3 text-center"><%= usuario.document %></div>
            <div class="w-1/3 text-center"><%= usuario.phone %></div>
            <div class="w-1/3 text-center"><%= usuario.rol %></div>
            <div class="w-1/3 text-center"><%= usuario.password %></div>
            <div class="w-1/3 text-center"><%= usuario.description %></div>
            <div class="w-1/3 text-center"><%= usuario.createdAt %></div>
            <div class="w-1/3 text-center"><%= usuario.updatedAt %></div>
          </div>
          <% }) %> <% } else { %>
          <p class="p-2 text-center">No hay clientes disponibles.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
